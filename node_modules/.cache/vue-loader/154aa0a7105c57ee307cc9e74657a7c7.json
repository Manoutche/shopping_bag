,CAAC,CAAC,CAAC,CAAC;MACnC,CAAC,CAAC;;MAEF,CAAC,CAAC,CAAC,CAAC,CAAC,EAAE,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC;IACxB;EACF,CAAC;EACD,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,EAAE,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC;;MAEf,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC,CAAC;;IAEhB,CAAC,CAAC;;AAEN","file":"C:/wamp64/www/apprentissage/Project 5 - Shopping Bag - Initial/src/views/Basket.vue","sourceRoot":"","sourcesContent":["<template>\n  <div class=\"basket\">\n    <div class=\"items\">\n\n      <template v-if=\"productsInBag.length\">\n        <div v-for=\"(product, index) in productsInBag\" :key=\"index\" class=\"item\">\n          <div @click=\"this.$store.dispatch('removeFromBag', product.id)\" class=\"remove\">Remove item</div>\n          <div class=\"photo\"><img :src=\"product.image\" alt=\"\"></div>\n          <div class=\"description\">{{ product.title }}</div>\n          <div class=\"price\">\n            <span class=\"quantity-area\">\n              <button :disabled=\"product.quantity<=1\" @click=\"product.quantity--\">-</button>\n              <span class=\"quantity\">{{ product.quantity }}</span>\n              <button @click=\"product.quantity++\">+</button>\n            </span>\n            <span class=\"amount\">US$ {{ (product.price * product.quantity).toFixed(2) }}</span>\n          </div>\n        </div>\n        <div class=\"grand-total\"> Grand Total: US$ {{ orderToatal() }}</div>\n      </template>\n      <template v-else>\n        <h4>No items in bag yet</h4>\n      </template>   \n    </div>\n  </div>\n</template>\n\n<script>\nimport { mapState } from 'vuex'\nexport default {\n  name: 'Basket',\n\n  methods: {\n    orderToatal(){\n      var total = 0;\n      this.productsInBag.forEach(item => {\n        total+= item.price * item.quantity\n      });\n\n      return total.toFixed(2)\n    }\n  },\n  computed :mapState([\n\n      'productsInBag'\n\n    ]),\n \n}\n</script>\n\n<style lang=\"scss\">\n\n.basket {\n  padding: 60px 0;  \n  .items {\n    max-width: 800px;\n    margin: auto;\n    .item {\n      display: flex;\n      justify-content: space-between;\n      padding: 40px 0;\n      border-bottom: 1px solid lightgrey;\n      position: relative;\n\n      .remove {\n        position: absolute;\n        top: 8px;\n        right: 0;\n        font-size: 11px;\n        text-decoration: underline;\n        cursor: pointer;\n      }\n\n      .quantity-area {\n        margin: 8px auto;\n        height: 14px;\n\n        button {\n          width: 16px;\n          height: 16px;\n          display: inline-flex;\n          justify-content: center;\n          align-items: center;\n          cursor: pointer;\n        }\n\n        .quantity {\n\n            margin: 0 4px;\n        }\n      }\n\n      .photo {\n        img {\n          max-width: 80px;\n        }\n      }\n\n      .description {\n        padding-left: 30px;\n        box-sizing: border-box;\n        max-width: 50%;\n\n      }\n\n      .price {\n        .amount {\n          font-size: 16px;\n          margin-left: 8px;\n          vertical-align: middle;\n\n        }\n      }\n    }\n      .grand-total {\n          font-size: 24px;\n          font-weight: bold;\n          text-align: right;\n          margin-top: 8px;\n      }\n\n  }\n\n}\n\n</style>\n"]}]}